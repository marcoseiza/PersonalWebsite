---
import RetroScroll from "./retro-scroll.astro";
import SimpleHeaderControls from "./simple-header-controls.astro";

export interface Props {
  title: string;
  homeUrl: string;
  blogUrl: string;
  showArrows?: boolean;
}
const { title, homeUrl, blogUrl, showArrows = false } = Astro.props as Props;
---

<div class="scroll-warpper">
  <header>
    <div class="grid">
      <SimpleHeaderControls
        homeUrl={homeUrl}
        blogUrl={blogUrl}
        showArrows={showArrows}
      />
      <h1 class="fancy-text">{title}</h1>
      <div class="spacer"></div>
    </div>
  </header>
  <RetroScroll>
    <div class="limit-content">
      <slot />
    </div>
  </RetroScroll>
</div>

<style>
  .scroll-warpper {
    display: grid;
    grid-template-rows: auto 1fr;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
  }

  .home {
    display: flex;
  }

  header {
    padding: 1em;
    padding-right: calc(1em + 24px);
    background-color: var(--color-secondary);
    border: var(--border-width) solid var(--color-card-text);
    /* border-bottom: var(--border-width) solid var(--color-card-text); */
    border-radius: 0 0px 15px 15px;
    margin-bottom: -15px;
    z-index: 999;
  }

  h1 {
    color: var(--color-card-text);
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
  }

  .limit-content {
    margin-left: auto;
    margin-right: auto;
    max-width: 900px;
  }

  @media screen and (max-width: 600px) {
    .grid {
      grid-template-columns: auto 1fr;
      justify-items: center;
    }
  }
</style>
