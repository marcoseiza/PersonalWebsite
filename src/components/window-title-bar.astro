---
const time = new Date();
---

<div class="title-bar">
  <div class="window-controls">
    <div class="close"></div>
    <div class="hide"></div>
    <div class="fullscreen"></div>
  </div>
</div>

<style>
  .title-bar {
    height: 2.5em;
    width: 100vw;
    position: fixed;
    top: 0;
    background-color: var(--color-secondary);
    border-bottom: var(--border-width) solid var(--color-card-text);
    display: flex;
    align-items: center;
    padding: 0.5em;
  }

  .window-controls {
    display: flex;
    gap: 0.25em;
  }

  .close,
  .hide,
  .fullscreen {
    width: 1.25em;
    height: 1.25em;
    border: var(--border-width) solid var(--color-card-text);
    border-radius: 50%;
  }

  .close {
    background: url(/img/checker.png);
    background-position: 2px 2px;
  }
</style>
