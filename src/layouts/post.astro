---
import HtmlHead from "../layouts/html-head.astro";
import SimpleHeader from "../components/simple-header.astro";
import type { MarkdownLayoutProps } from "astro";
import Separator from "../components/separator.astro";
import MdStyling from "../components/md-styling.astro";

type Props = MarkdownLayoutProps<{
  title: string;
  date: string;
}>;
const { frontmatter } = Astro.props as Props;
---

<HtmlHead title={frontmatter.title}>
  <SimpleHeader title={"ðŸ‘¨â€ðŸ’» My Blog"} homeUrl="/" blogUrl="/blog">
    <div class="background">
      <h4 class="fancy-text">{frontmatter.title}</h4>
      <h4>{frontmatter.date}</h4>
      <Separator showLine lineHeight={3.5} parentPadding="2em" />
      <MdStyling>
        <slot />
      </MdStyling>
    </div>
  </SimpleHeader>
</HtmlHead>

<style is:inline>
  body {
    background-color: var(--color-background);
  }

  main {
    padding: 2em;
    padding-top: 3em;
    --box-shadow: 3px 3px 0 black;
    --box-shadow-hover: 1px 1px 0 black;
  }

  .background {
    border: var(--border-width) solid black;
    box-shadow: 7px 7px 0px black;
    background-color: var(--color-secondary);
    padding: 2em;
    padding-top: 1em;
    border-radius: 15px;
  }
</style>
